@model StudentManagement.Models.ViewModels.StudenViewModel;

@{
    var title = "Thêm học sinh";
}







<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <form asp-action="Upsert" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            @if (Model.Id != null)
            {
                title = "Chỉnh sửa thông tin học sinh";
            }
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input type="radio" asp-for="Gender" value="Nam" /> Nam
                <input style="margin-left:68px;" type="radio" asp-for="Gender" value="Nữ" /> Nữ
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birth" class="control-label"></label>
                <input type="date" asp-for="Birth" class="form-control" />
                <span asp-validation-for="Birth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearToSchool" class="control-label"></label>
                <input asp-for="YearToSchool" class="form-control" />
                <span asp-validation-for="YearToSchool" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.Id != null)
                {
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Thêm" class="btn btn-primary" onclick="Test()" />
                }
            </div>
        </form>
        <div>
            <a asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Select 2-->
    <script src="~/js/student.js"></script>
}