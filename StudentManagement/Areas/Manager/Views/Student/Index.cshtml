
@{
    ViewData["Title"] = "Index";
}


<!-- Page Heading -->
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Danh sách học sinh </h2>
    </div>

    <div  class="col-6 text-right">
        <a asp-controller="Student" asp-action="Upsert" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Thêm học sinh mới </a>
    </div>
</div>
<!-- DataTales Example -->



