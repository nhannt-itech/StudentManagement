            <div class="carousel-item active">
                <img class="d-block w-100" src="/image/home10.png" alt="First slide">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="carousel-item ">
                <img class="d-block w-100" src="/image/home1.png" alt="Second slide">
            </div>
            <div class="carousel-item ">
                <img class="d-block w-100" src="/image//home2.png" alt="Third slide">
            </div>
        </div>
    </div>
</div>


