@model StudentManagement.Models.ViewModels.SummarySubjectVM

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Tổng kết theo môn học</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-8 row">

        <label class="ml-2 col-1 mt-1">Môn: </label>
        @Html.DropDownListFor(x => x.SubjectList, Model.SubjectList, "-Chọn",
        new { @class = "col-2 form-control", @id = "SubjectId" })

        <label class="ml-2 col-1 mt-1">HK: </label>
        <select id="Semester" class="col-1 form-control">
            <option value="1">1</option>
            <option value="2">2</option>
        </select>

        <label class="ml-2 col-1 mt-1">Khối: </label>
        <select id="Grade" class="col-1 form-control">
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
        </select>

        <label class="ml-2 col-1 mt-1">Năm: </label>
        @Html.DropDownListFor(x => x.Year, Model.YearList, "-Chọn",
        new { @class = "col-2 form-control", @id = "Year" })
    </div>
    <div class="col-4" style="text-align:right">
        <a onclick="loadDataTable()">
            <h2 class="btn btn-primary bg-gradient-primary text-light">Tổng kết học kỳ</h2>
        </a>
    </div>
</div>
<br />
<div class="card shadow mb-4 bg-gray-100">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered border-dark text-gray-900" id="tblData" width="100%" cellspacing="0">
                <thead>
                    <tr class="table-info">
                        <th>Lớp</th>
                        <th>Sĩ Số</th>
                        <th>Số Lượng Đạt</th>
                        <th>Tỷ Lệ</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr class="table-info">
                        <th>Lớp</th>
                        <th>Sĩ Số</th>
                        <th>Số Lượng Đạt</th>
                        <th>Tỷ Lệ</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/summarySubject.js"></script>
}


