
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4 bg-gray-100">
    <div class="card-header py-2">
        <a asp-controller="Class" asp-action="Upsert" type="submit" class="float-lg-right btn btn-info ml-2" style="color:white">
            <i class="fas fa-plus fa-sm"></i>
            Thêm lớp học
        </a>
    </div>
    <div class="card-body">
        <div class="">
            <br />
            <table class="table-bordered border-dark text-gray-900" id="tblData" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Năm học</th>
                        <th>Sỉ số</th>
                        <th>Khối</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/class.js"></script>
}