
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Danh sách lớp học </h2>
    </div>

    <div class="col-6 text-right">
        <a asp-controller="Class" asp-action="Upsert" class="btn btn-success bg-gradient-success"><i class="fas fa-plus"></i> &nbsp; Thêm lớp học </a>
    </div>
</div>
<div class="card shadow mb-4 bg-gray-100">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered border-dark text-gray-900" id="tblData" width="100%" cellspacing="0">
                <thead>
                    <tr class="table-info">
                        <th>Tên</th>
                        <th>Năm học</th>
                        <th>Sỉ số</th>
                        <th>Khối</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr class="table-info">
                        <th>Tên</th>
                        <th>Năm học</th>
                        <th>Sỉ số</th>
                        <th>Khối</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/class.js"></script>
}