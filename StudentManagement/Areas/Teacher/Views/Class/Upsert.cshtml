@model StudentManagement.Models.Class
@{
    var Title = "THÊM LỚP";

    if (Model.Id != null)
    {
        Title = "CHỈNH SỬA LỚP";
    }

    ViewData["Title"] = Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Id == null)
{
    <div class="container">
        <div class="row">
            <div class="offset-2 col-lg-8 ">
                <div class="p-4">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4"><u>@Title</u></h1>
                    </div>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-3 text-lg">
                                <label>Tên lớp:</label>
                            </div>
                            <div class="form-group col-9">
                                <input id="Name" asp-for="Name" type="text" class="form-control" readonly>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 text-lg">
                                <label>Năm học:</label>
                            </div>
                            <div class="form-group col-9">
                                <input id="Year" asp-for="Year" type="text" class="form-control" readonly>
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 text-lg">
                                <label>Sỉ số:</label>
                            </div>
                            <div class="form-group col-9">
                                <input id="NumStudents" asp-for="NumStudents" type="text" class="form-control" readonly>
                                <span asp-validation-for="NumStudents" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 text-lg">
                                Khối:
                            </div>
                            <div class="form-group col-9">
                                <select id="Grade" oninput="SelectGradeSetClassName()" asp-for="Grade" class="form-control">
                                    <option value="">--Nhấp để chọn</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                                @*@Html.DropDownListFor(x=>x.Subje)*@
                                <span asp-validation-for="Grade" class="text-danger"></span>
                            </div>
                        </div>

                        @if (Model.Id == null)
                        {
                            <button type="submit" class="btn btn-success bg-gradient-success btn-user btn-block">
                                Thêm
                            </button>
                        }
                        <a asp-controller="Class" asp-action="Index" class="btn btn-dark bg-gradient-dark btn-user btn-block">
                            Quay lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <input type="text" id="ClassId" value="@Model.Id" hidden>
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Danh sách học sinh lớp @Model.Name</h2>
        </div>

        <div class="col-6 text-right">
            <a href="#" data-toggle="modal" data-target="#AddStudentModal" class="btn btn-success bg-gradient-success"><i class="fas fa-plus"></i> &nbsp; Thêm học sinh</a>
        </div>
    </div>
    <div class="card shadow mb-4 bg-gray-100">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table-bordered border-dark text-gray-900" id="tblStudentInClass" width="100%" cellspacing="0">
                    <thead>
                        <tr class="table-info">
                            <th>Mã số</th>
                            <th>Tên</th>
                            <th>Giới tính</th>
                            <th>Năm sinh</th>
                            <th>Địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr class="table-info">
                            <th>Mã số</th>
                            <th>Tên</th>
                            <th>Giới tính</th>
                            <th>Năm sinh</th>
                            <th>Địa chỉ</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <partial name="_AddStudent" model="ViewBag.AddStudent" />
}

@section Scripts{
    <script src="~/js/studentinclass.js"></script>
}
